{
  "name": "circuitmcp",
  "version": "0.1.0",
  "description": "Circuit simulation capabilities through Model Context Protocol (MCP)",
  "repository": "https://github.com/amzsaint/circuitmcp",
  "author": "CircuitMCP Team",
  "license": "MIT",
  "tags": ["circuit", "simulation", "MCP", "PySpice", "schematic"],
  "install_command": "pip install git+https://github.com/amzsaint/circuitmcp.git",
  "version_command": "python -c \"import circuitmcp; print(circuitmcp.__version__)\"",
  "main": "circuitmcp",
  "dependencies": {
    "python": ">=3.9",
    "PySpice": ">=1.5.0",
    "schemdraw": ">=0.15",
    "matplotlib": ">=3.8.2"
  },
  "scripts": {
    "server": "circuitmcp-server"
  },
  "keywords": [
    "circuit simulation",
    "electronic design",
    "model context protocol",
    "mcp",
    "pyspice",
    "schemdraw"
  ],
  "claude_desktop": {
    "enabled": true,
    "mcp": {
      "server_command": "circuitmcp-server",
      "default_port": 8000,
      "server_args": ["--host", "127.0.0.1", "--port", "8000"],
      "capabilities": [
        "circuit-creation",
        "circuit-simulation",
        "schematic-generation"
      ]
    },
    "usage_example": "from circuitmcp import mcp, Circuit\n\n# Create a new circuit\ncircuit = Circuit(circuit_id=1, name='My Circuit')\n\n# Add components\ncircuit.add_component('V', ['1', '0'], 5.0)  # 5V source\ncircuit.add_component('R', ['1', '2'], 1000.0)  # 1kÎ© resistor"
  }
} 